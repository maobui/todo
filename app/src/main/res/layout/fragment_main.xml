<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_call_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call List"
        app:layout_constraintBottom_toTopOf="@+id/button_buy_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/button_buy_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy List"
        app:layout_constraintBottom_toTopOf="@+id/button_sell_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_call_list" />

    <Button
        android:id="@+id/button_sell_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_buy_list" />
</androidx.constraintlayout.widget.ConstraintLayout>